<div class="jumbotron-8">
  <div class="container">
    <h1>You can contact me there. Please fill the form </h1>
    <p>I will reply within 24 hours (max)</p>
  <%= form_for (@contact) do |f| %>
<div class="field">

  <%= f.text_field :name, :placeholder => "Name",  required: true %>

  <br>


  <%= f.email_field :email, :placeholder => "Email", required: true %>

  <br>


  <%= f.text_area :message, :placeholder => "Message", class: "text", as: :text %>
    </div>
  <div class="hidden">
    <%= f.label :nickname %> <br>
    <%= f.text_field :nickname, hint: "leave this field blank" %>
  </div>
   <br>
    <%= f.submit "Send message", class: "btn btn-submit" %>

  <%end%>

   </div>
 </div>
